<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:c="http://www.springframework.org/schema/c" xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="initializeAuthenticationContext" class="net.shibboleth.idp.authn.impl.InitializeAuthenticationContext" />

    <bean id="filterAvailableWorkflowsByPassivity" class="net.shibboleth.idp.authn.impl.FilterAvailableWorkflowsByPassivity" />

    <bean id="setRequestedAuthenticationWorkflows" class="net.shibboleth.idp.saml.impl.profile.saml2.SetRequestedAuthenticationWorkflows" />

    <bean id="filterAvailableWorkflowsByRequestedWorkflows" class="net.shibboleth.idp.authn.impl.FilterAvailableWorkflowsByRequestedWorkflows" />

    <bean id="selectAuthenticationWorkflow" class="net.shibboleth.idp.authn.impl.SelectAuthenticationWorkflow" />

    <bean id="extractUserAgentAddress" class="net.shibboleth.idp.authn.impl.ExtractUserAgentAddress" />

    <bean id="validateUserAgentAddress" class="net.shibboleth.idp.authn.impl.ValidateUserAgentAddress">
        <constructor-arg value="RandomUser" />
        <constructor-arg>
            <list>
                <value>192.160.0.0/16</value>
                <value>10.0.0.0/8</value>
            </list>
        </constructor-arg>
        <constructor-arg value="false" />
    </bean>

    <bean id="extractUsernamePasswordFromWssToken" class="net.shibboleth.idp.authn.impl.ExtractUsernamePasswordFromWssToken" />

    <bean id="displayUsernamePasswordPage" class="net.shibboleth.idp.authn.impl.DisplayUsernamePasswordPage">
        <constructor-arg>
            <bean class="net.shibboleth.utilities.java.support.velocity.Template" factory-method="fromTemplate">
                <constructor-arg ref="velocityEngine"/>
                <constructor-arg value="NameOfSomeTemplate" />
            </bean>
        </constructor-arg>
    </bean>

    <bean id="extractUsernamePasswordFromFormResponse" class="net.shibboleth.idp.authn.impl.ExtractUsernamePasswordFromFormResponse" />

    <bean id="validateUsernamePasswordAgainstLdap" class="net.shibboleth.idp.authn.impl.ValidateUsernamePasswordAgainstLdap.">
        <!-- LDAP settings would go here -->
    </bean>

    <bean id="finalizeAuthentication" class="net.shibboleth.idp.authn.impl.FinalizeAuthentication" />
</beans>