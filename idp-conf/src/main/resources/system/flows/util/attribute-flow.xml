<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow.xsd"
    parent="authn.abstract">
    
    <!--
    This is a mini-flow for resolving attributes. A precondition for it is the
    presence of an AttributeResolutionContext with the right information in it
    to drive the action. 
    -->
    
    <action-state id="ResolveAttributes">
        <evaluate expression="ResolveAttributes" />
        <evaluate expression="'proceed'" />
        
        <transition on="proceed" to="proceed" />
    </action-state>
    
    <bean-import resource="attribute-beans.xml" />

</flow>
