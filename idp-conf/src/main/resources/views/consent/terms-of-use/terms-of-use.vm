<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
    <head>
        <meta charset="utf-8" />
        <title>#springMessageText("idp.tou.title" "Terms Of Use")</title>
        <link rel="stylesheet" type="text/css" href="$request.getContextPath()/css/main.css"/>
    </head>
    <body>
        <div class="wrapper">
            <div class="container">
                <header>
                    <a class="logo" href="../images/dummylogo.png">
                        <img src="$request.getContextPath()/images/dummylogo.png" alt="Replace or remove this logo"/>
                    </a>
                </header>
                <div class="content">
                    <form action="$flowExecutionUrl" method="post">
                        <div id="idp.tou.text">
                            #springMessageText("idp.tou.text" "Example Terms Of Use")
                        </div>
                        <section>
                            <input type="checkbox" name="idp.tou.accept" value="yes"/>
                            #springMessageText("idp.tou.accept" "Accept")
                            #springShowErrors(" " "")
                        </section>
                        <section>
                            <button class="form-element form-button" type="submit" name="_eventId_proceed" >#springMessageText("idp.tou.submit" "Submit")</button>
                        </section>
                    </form>
                </div>
            </div>
            <footer>
                <div class="container container-footer">
                    <p class="footer-text">Insert your footer text here.</p>
                </div>
            </footer>
        </div>
    </body>
</html>
