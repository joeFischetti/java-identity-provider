<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow.xsd">

    <!-- For this test local storage write flow, get the key and value from the request instead of the StorageService. -->
    <on-start>
        <evaluate expression="requestParameters.localStorageKey" result="flowScope.localStorageKey" />
        <evaluate expression="requestParameters.localStorageValue" result="flowScope.localStorageValue" />
    </on-start>

    <action-state id="Initialize">
        <evaluate expression="InitializeProfileRequestContext" />
        <evaluate expression="'proceed'" />
        <transition on="proceed" to="LocalStorageWrite" />
    </action-state>

    <subflow-state id="LocalStorageWrite" subflow="local-storage/write">
        <input name="calledAsSubflow" value="true" />

        <!-- The input attributes contain the strings actually written to local storage. -->
        <input name="localStorageKey" type="string" value="flowScope.localStorageKey" />
        <input name="localStorageValue" type="string" value="flowScope.localStorageValue" />

        <!-- Store the returned parameters in flow scope for testing purposes. -->
        <transition to="LocalStorageView">
            <set name="flowScope.localStorageSuccess" value="currentEvent.attributes.localStorageSuccess" />
            <set name="flowScope.localStorageException" value="currentEvent.attributes.localStorageException" />
        </transition>
    </subflow-state>

    <view-state id="LocalStorageView" view="/local-storage-test/local-storage-display">
        <!-- TODO -->
    </view-state>

    <end-state id="proceed" />

    <bean-import resource="../local-storage-test-beans.xml" />

</flow>
