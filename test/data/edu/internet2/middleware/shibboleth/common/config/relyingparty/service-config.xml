<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
    default-autowire="byType">

    <bean id="shibboleth.ParserPool" class="org.opensaml.xml.parse.BasicParserPool">
        <property name="maxPoolSize" value="50" />
        <property name="createBuildersAtPoolLimit" value="true" />
        <property name="coalescing" value="true" />
        <property name="ignoreComments" value="true" />
        <property name="ignoreElementContentWhitespace" value="true" />
        <property name="namespaceAware" value="true" />
    </bean>

    <bean id="config1" class="org.opensaml.resource.ClasspathResource">
        <constructor-arg
            value="/data/edu/internet2/middleware/shibboleth/common/config/relyingparty/relying-party1.xml" />
    </bean>

    <bean id="relyingPartyManager"
        class="edu.internet2.middleware.shibboleth.common.relyingparty.provider.SAMLMDRelyingPartyConfigurationManager"
        init-method="initialize">
        <constructor-arg type="java.util.List">
            <list>
                <ref bean="config1" />
            </list>
        </constructor-arg>
    </bean>

</beans>