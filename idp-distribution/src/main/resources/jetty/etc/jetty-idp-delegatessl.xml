<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">

<Configure id="Server" class="org.eclipse.jetty.server.Server">
  <Call id="delegateToApplicationSslConnector" name="addConnector">
    <Arg>
      <New class="org.eclipse.jetty.server.ServerConnector">      
         <Arg name="server"><Ref refid="Server" /></Arg>
         <Arg>
           <New class="net.shibboleth.utilities.jetty9.DelegateToApplicationSslContextFactory">
             <Set name="KeyStorePath"><Property name="jetty.keystore" /></Set>
             <Set name="keyStorePassword"><Property name="jetty.keystore.password" /></Set>
           </New>
          </Arg>
        <Set name="host"><Property name="jetty.host" /></Set>
        <Set name="port"><Property name="jetty.delegate.port" default="8443" /></Set>
        <Set name="idleTimeout">30000</Set>
      </New>
    </Arg>
  </Call>
</Configure>
